{
  "name": "@verful/notifications",
  "description": "The easiest way to send notifications in AdonisJS",
  "version": "2.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/verful/notifications.git"
  },
  "main": "build/providers/NotificationProvider.js",
  "types": "build/adonis-typings/index.d.ts",
  "files": [
    "build/commands",
    "build/adonis-typings",
    "build/providers",
    "build/templates",
    "build/src",
    "build/instructions.js",
    "build/instructions.md"
  ],
  "license": "MIT",
  "dependencies": {
    "@poppinss/manager": "^5.0.0",
    "@poppinss/utils": "^4.0.1",
    "fastq": "^1.13.0",
    "luxon": "^2.3.0"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.4.1",
    "@adonisjs/core": "^5.4.2",
    "@adonisjs/lucid": "^16.3.2",
    "@adonisjs/mail": "^7.2.4",
    "@adonisjs/mrm-preset": "^5.0.2",
    "@adonisjs/require-ts": "^2.0.9",
    "@adonisjs/sink": "^5.2.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@japa/expect": "^1.1.1",
    "@japa/run-failed-tests": "^1.0.3",
    "@japa/runner": "^1.1.3",
    "@japa/spec-reporter": "^1.1.7",
    "@poppinss/dev-utils": "^2.0.1",
    "@types/node": "^17.0.18",
    "commitizen": "^4.2.4",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "del-cli": "^4.0.1",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-adonis": "^2.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "github-label-sync": "^2.0.2",
    "husky": "^7.0.4",
    "mrm": "^3.0.10",
    "np": "^7.6.0",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.2",
    "typescript": "^4.5.5"
  },
  "peerDependencies": {
    "@adonisjs/core": "^5.4.2",
    "@adonisjs/lucid": "^16.3.2",
    "@adonisjs/mail": "^7.2.4"
  },
  "peerDependenciesMeta": {
    "@adonisjs/lucid": {
      "optional": true
    },
    "@adonisjs/mail": {
      "optional": true
    }
  },
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "test": "node -r @adonisjs/assembler/build/register bin/test/index.ts",
    "coverage": "nyc yarn test",
    "clean": "del build",
    "copyfiles": "copyfiles \"templates/**/*.txt\" \"instructions.md\" build",
    "compile": "yarn lint && yarn clean && tsc",
    "build": "yarn compile && yarn copyfiles",
    "prepublishOnly": "yarn build",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "commit": "git-cz",
    "release": "np --message=\"chore(release): %s\"",
    "version": "yarn build",
    "sync-labels": "github-label-sync --labels ./node_modules/@adonisjs/mrm-preset/gh-labels.json verful/notifications"
  },
  "engines": {
    "node": ">=10"
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptPackage",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "np": {
    "contents": ".",
    "anyBranch": false
  },
  "adonisjs": {
    "types": "@verful/notifications",
    "instructions": "./build/instructions.js",
    "instructionsMd": "./build/instructions.md",
    "providers": [
      "@verful/notifications"
    ],
    "commands": [
      "@verful/notifications/build/commands"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
